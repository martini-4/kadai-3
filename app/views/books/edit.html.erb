<div class="" style="width: 40%; margin: auto;">

	<%= render 'layouts/error', error: @book %>
		<h2 class="font">Editing Book</h2>

		<%= form_for(@book) do |book| %>

			<h4 class="font">Title</h4>
			<%= book.text_field :title, class:'col-lg-12' %>

			<h4 class="font">Opinion</h4>
			<%= book.text_area :body, class:'col-lg-12' %>

			<%= book.submit 'Update Book', class:'book-update', class:'col-lg-12 update' %>

		<% end %>

		<div class="link" style="float: left;">
			<%= link_to 'Show', book_path(params[:id]), style: 'float:left', class:'show-back' %>
			<p style="float: left">|</p>
			<%= link_to 'Back', books_path, class:'show-back' %>
		</div>


</div>

