<div class="container" style="">
	<%= render 'layouts/error', error: @book_new %>
	<div class="row" style="">

		<div class="col-lg-3">
				<%= render 'users/list', user: @user %>
				<%= render 'books/list', book_new: @book_new %>
		</div>
		<div class="col-lg-9">
			<h2>Books</h2>

			<table class="" style="width: 100%">
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
				<% @books.each do |book| %>
					<tr style="border-style: solid; border-width: 1px 0;">
						<td>
							<%= attachment_image_tag book.user, :profile_image, size: "60x60", class:'',format:'jpeg', fallback: 'no_image.jpg' %>
						</td>
						<td>
							<%= link_to book.title, book_path(book) %>
						</td>
						<td>
							<%= book.body %>
						</td>
					</tr>

				<% end %>
			</table>
		</div>
	</div>

</div>

<p style="float: right; margin-right: 15%;">CopyRight Infratop.inc</p>