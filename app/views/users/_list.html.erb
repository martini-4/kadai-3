<div class="user">

		<h2>User info</h2>

		<div class="user-image">
			<%= attachment_image_tag user, :profile_image, size: "100x100", class:'',format:'jpeg', fallback: 'no_image.jpg' %>
		</div>

		<div class="name">
			<table style="width: 100%; height: 100px;">
				<tr style="border-style: solid; border-width: 0.3px 0;">
					<td>name</td>
					<td><%= user.name %></td>
				</tr>
				<tr style="">
					<td>introduction</td>
					<td><%= user.introduction %></td>
				</tr>
			</table>
		</div>
		<% if @user == current_user %>
			<%= link_to edit_user_path(current_user) do %>
		    <span class="glyphicon glyphicon-wrench user_edit" aria-hidden="true" style="width: 100%; border: 1px solid black; text-align: center; line-height: 30px; border-radius: 10px; color: #666;"></span>
	        <% end %>
		<% else %>
		    <%= link_to user_path(current_user) do %>
		    <span class="glyphicon glyphicon-wrench user_edit" aria-hidden="true" style="width: 100%; border: 1px solid black; text-align: center; line-height: 30px; border-radius: 10px; color: #666;"></span>
	        <% end %>
	    <% end %>


</div>